{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": "@",
			"args": {
				"only_if_ssh": true,
				"exclude_domain": true
			}
		},
		"virtualenv": {
			"before": "ⓔ  "
		},
		"branch": {
			"before": " "
		}
	},
	"segments": {
		"left": [
			{
				"module": "powerline.segments.shell",
				"name": "last_status"
			},
			{
				"name": "branch",
				"args": {
					"status_colors": "true"
				}
			},
			{
				"name": "user"
			},
			{
				"name": "virtualenv"
			},
			{
				"name": "cwd",
				"args": {
                    "use_path_separator": true,
                    "dir_shorten_len": 5
				}
			}
		],
		"right": [
			{
				"module": "powerline.segments.shell",
				"name": "last_pipe_status"
			}
		]
	}
}
