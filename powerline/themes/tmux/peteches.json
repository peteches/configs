
{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"uptime": {
			"before": "⇑  "
		},
		"external_ip": {
			"before": "⌬  "
		}
	},
	"segments": {
		"right": [
			{
				"name": "uptime",
				"priority": 50
			},
			{
				"name": "external_ip",
				"priority": 50
			},
			{
				"name": "network_load",
				"priority": 50,
				"args": {
					"sent_format": "⌃{value:>8} ",
					"recv_format": "⌄{value:>8} "
				}
			},
			{
				"name": "system_load",
				"priority": 50
			},
			{
				"name": "date"
			},
			{
				"name": "date",
				"args": {
					"format": "%H:%M:%S",
					"istime": true
				}
			},
			{
				"name": "email_imap_alert",
				"priority": 10
			},
			{
				"name": "hostname"
			}
		]
	}
}
