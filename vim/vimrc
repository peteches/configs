let g:session_file=expand("$HOME/.vim/Session.vim")
if filereadable(g:session_file) && argc() < 1
	echom "Loading Session from " . g:session_file
	exe "source " . g:session_file
else
	echom "No Session file found creating new session."
	runtime plugin/obsession.vim
	if exists(':Obsession')
		exe "Obsession " . g:session_file
	endif
endif

